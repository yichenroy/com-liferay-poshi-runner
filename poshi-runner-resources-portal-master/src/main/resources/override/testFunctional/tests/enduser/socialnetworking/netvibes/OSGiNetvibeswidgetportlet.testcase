<definition component-name="portal-plugins-osgi">
	<property name="portal.release" value="true" />
	<property name="portal.upstream" value="true" />
	<property name="plugins.deployment.type" value="osgi" />
	<property name="testray.main.component.name" value="Social Networking" />

	<set-up>
		<execute macro="User#firstLoginPG" />

		<execute macro="ProductMenu#gotoPortlet">
			<var name="category" value="Navigation" />
			<var name="panel" value="Site Administration" />
			<var name="portlet" value="Site Pages" />
		</execute>

		<execute macro="SitePages#addPublicPage">
			<var name="pageName" value="Test Page" />
		</execute>
	</set-up>

	<tear-down>
		<execute macro="Page#tearDownCP" />
	</tear-down>

	<command name="NetvibesWidgetPortletSmoke" priority="4">
		<property name="portlet.plugins.includes" value="netvibes-widget-portlet" />

		<var name="appName" value="Netvibes Widget" />

		<execute macro="Navigator#gotoPage">
			<var name="pageName" value="Test Page" />
		</execute>

		<execute macro="Portlet#addPG">
			<var name="portletName" value="Netvibes Widget" />
		</execute>

		<execute function="AntCommand#antCommand" locator1="build-test.xml" value1="remove-plugin -Dplugin.name=netvibes-widget-portlet" />
	</command>
</definition>